<UserControl x:Class="ImageUtilities.TransparencyConversationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImageUtilities"
      mc:Ignorable="d" Unloaded="UserControl_Unloaded"
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Preview"/>
        <Image x:Name="Preview" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Background="White">
            <ScrollViewer MaxHeight="300px">
            <StackPanel>
                <TextBlock Text="Intensity" FontSize="18"/>
                <Expander Header="MixColorTransparency">
                    <StackPanel>
                        <CheckBox IsChecked="true" Name="MixColorTransparency">Enable Mix Color Transparency</CheckBox>
                        <TextBlock Text="R"/>
                        <Slider x:Name="R" Minimum="0" Value="255" Maximum="255" SmallChange="1"/>
                        <TextBlock Text="G"/>
                        <Slider x:Name="G" Minimum="0" Value="255" Maximum="255" SmallChange="1"/>
                        <TextBlock Text="B"/>
                        <Slider x:Name="B" Minimum="0" Value="255" Maximum="255" SmallChange="1"/>
                        <TextBlock Text="Alpha"/>
                        <Slider x:Name="Alpha" Minimum="0" Value="255" Maximum="255" SmallChange="1"/>
                        <TextBlock Text="Cutout Mode"/>
                        <ComboBox Name="CutoutMode" SelectedIndex="0">
                            <ComboBoxItem>No Cutout</ComboBoxItem>
                            <ComboBoxItem>And</ComboBoxItem>
                            <ComboBoxItem>Or</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Expander>
                <Expander Header="Transparency Cutout">
                    <StackPanel>
                        <CheckBox x:Name="TransparencyCutout">Enable Transparency Cutout</CheckBox>
                        <TextBlock Text="R"/>
                        <Slider x:Name="R1" Minimum="0" Value="255" Maximum="255" SmallChange="1"/>
                        <TextBlock Text="G"/>
                        <Slider x:Name="G1" Minimum="0" Value="255" Maximum="255" SmallChange="1"/>
                        <TextBlock Text="B"/>
                        <Slider x:Name="B1" Minimum="0" Value="255" Maximum="255" SmallChange="1"/>
                        <ComboBox Name="CutoutModeTC" SelectedIndex="0">
                            <ComboBoxItem>And</ComboBoxItem>
                            <ComboBoxItem>Or</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Expander>
                    <Expander Header="More Options">
                        <CheckBox x:Name="IsUseDownsize">Use Downsized Image for faster preview</CheckBox>
                    </Expander>
            </StackPanel>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="View" Click="Button_Click"/>
                <Button Content="Apply"/>
                <Button Content="Cancel"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
